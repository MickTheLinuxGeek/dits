# DITS Environment Configuration
# Copy this file to .env and fill in the actual values

# ============================================
# Application
# ============================================
NODE_ENV=development
PORT=3000
APP_URL=http://localhost:3000

# ============================================
# Database - PostgreSQL
# ============================================
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=dits_dev
DATABASE_USER=dits_user
DATABASE_PASSWORD=dits_password
DATABASE_URL=postgresql://${DATABASE_USER}:${DATABASE_PASSWORD}@${DATABASE_HOST}:${DATABASE_PORT}/${DATABASE_NAME}

# Test Database
TEST_DATABASE_NAME=dits_test
TEST_DATABASE_URL=postgresql://${DATABASE_USER}:${DATABASE_PASSWORD}@${DATABASE_HOST}:${DATABASE_PORT}/${TEST_DATABASE_NAME}

# Database Pool Settings
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10

# ============================================
# Redis
# ============================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_URL=redis://${REDIS_HOST}:${REDIS_PORT}

# Session Settings
SESSION_SECRET=change-this-to-a-random-secret-in-production
SESSION_TIMEOUT=604800000
# 7 days in milliseconds

# ============================================
# Authentication
# ============================================
# JWT Configuration
JWT_SECRET=change-this-to-a-random-secret-in-production
JWT_REFRESH_SECRET=change-this-to-a-different-random-secret-in-production
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Password Hashing
BCRYPT_ROUNDS=12

# ============================================
# Email Service
# ============================================
EMAIL_PROVIDER=smtp
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@example.com
SMTP_PASSWORD=your-smtp-password
EMAIL_FROM=noreply@dits.dev

# ============================================
# Git Provider Integration
# ============================================
# GitHub OAuth
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret
GITHUB_CALLBACK_URL=http://localhost:3000/auth/github/callback

# GitLab OAuth
GITLAB_CLIENT_ID=your-gitlab-client-id
GITLAB_CLIENT_SECRET=your-gitlab-client-secret
GITLAB_CALLBACK_URL=http://localhost:3000/auth/gitlab/callback

# Bitbucket OAuth
BITBUCKET_CLIENT_ID=your-bitbucket-client-id
BITBUCKET_CLIENT_SECRET=your-bitbucket-client-secret
BITBUCKET_CALLBACK_URL=http://localhost:3000/auth/bitbucket/callback

# ============================================
# Encryption
# ============================================
# Used for encrypting sensitive data like Git tokens
ENCRYPTION_KEY=change-this-to-a-32-character-key

# ============================================
# Search - Elasticsearch
# ============================================
ELASTICSEARCH_NODE=http://localhost:9200
ELASTICSEARCH_USERNAME=
ELASTICSEARCH_PASSWORD=
ELASTICSEARCH_INDEX_PREFIX=dits

# ============================================
# Rate Limiting
# ============================================
RATE_LIMIT_WINDOW_MS=900000
# 15 minutes in milliseconds
RATE_LIMIT_MAX_REQUESTS=100

# ============================================
# CORS
# ============================================
CORS_ORIGIN=http://localhost:5173,http://localhost:3000
CORS_CREDENTIALS=true

# ============================================
# Logging
# ============================================
LOG_LEVEL=debug
LOG_FORMAT=json

# ============================================
# File Upload
# ============================================
MAX_FILE_SIZE=10485760
# 10MB in bytes
UPLOAD_DIR=./uploads

# ============================================
# WebSocket
# ============================================
WS_PORT=3001
WS_PATH=/ws

# ============================================
# Monitoring
# ============================================
# DataDog (optional)
DATADOG_API_KEY=
DATADOG_APP_KEY=
DATADOG_ENV=development

# Sentry (optional)
SENTRY_DSN=

# ============================================
# Feature Flags
# ============================================
FEATURE_GIT_INTEGRATION=true
FEATURE_WEBHOOKS=true
FEATURE_ANALYTICS=false

# ============================================
# Development
# ============================================
# Enable debugging
DEBUG=dits:*

# Hot reload
HOT_RELOAD=true

# API Documentation
ENABLE_API_DOCS=true
API_DOCS_PATH=/api/docs
